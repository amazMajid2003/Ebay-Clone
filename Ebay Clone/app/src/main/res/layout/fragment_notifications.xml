<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:id="@+id/linearLayoutinbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_sdp_65"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_sdp_4"
            android:layout_weight="2"
            android:text="My eBay"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_sdp_24"
            android:textStyle="bold" />   <!-- Set layout_weight to 2 -->

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_sdp_10"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/baseline_search_24" />   <!-- Set layout_weight to 1 -->

        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_sdp_10"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/baseline_shopping_cart_24" />   <!-- Set layout_weight to 1 -->
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutinbox"> <!-- Add this line to hide the scrollbar -->

        <LinearLayout
            android:id="@+id/buttonRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_sdp_10"
            android:padding="@dimen/padding_sdp_5">

            <Button
                android:id="@+id/buttonImportant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_sdp_8"
                android:background="@drawable/rounded_button"
                android:text="Important"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sdp_16" />

            <Button
                android:id="@+id/buttonBuying2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_sdp_8"
                android:background="@drawable/rounded_button"
                android:text="Buying"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sdp_16" />

            <Button
                android:id="@+id/buttonSelling2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:layout_marginEnd="@dimen/margin_sdp_8"
                android:text="Selling"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sdp_16" />

            <Button
                android:id="@+id/buttonRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_sdp_8"
                android:background="@drawable/rounded_button"
                android:text="Recommended"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sdp_16" />

            <Button
                android:id="@+id/buttonAccount"
                android:layout_marginEnd="@dimen/margin_sdp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Account"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_sdp_16" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fitsSystemWindows="false"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/width_sdp_39">


            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="@dimen/width_sdp_152"
                android:layout_height="@dimen/width_sdp_152"
                android:src="@drawable/ic_notifications_black_24dp"
                android:contentDescription="Notification Icon"
                android:layout_marginBottom="@dimen/margin_sdp_10"
                android:layout_marginTop="@dimen/margin_sdp_10"/>

            <!-- TextView for 'You're all caught up!' -->
            <TextView
                android:id="@+id/caughtUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're all caught up!"
                android:textSize="@dimen/textsize_sdp_20"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>