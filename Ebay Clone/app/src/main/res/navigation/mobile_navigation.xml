<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ebay_clone.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_myebay"
        android:name="com.example.ebay_clone.ui.myebay.MyebayFragment"
        android:label="@string/title_myeBay"
        tools:layout="@layout/fragment_myebay" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.ebay_clone.ui.search.SearchFragment"
        android:label="@string/title_myeBay"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.ebay_clone.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_selling"
        android:name="com.example.ebay_clone.ui.selling.SellingFragment"
        android:label="@string/title_selling"
        tools:layout="@layout/fragment_selling" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.ebay_clone.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>